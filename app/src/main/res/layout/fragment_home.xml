<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F9"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הקורסים שלי"
        android:fontFamily="@font/rubik_bold"
        android:textColor="#42445F"
        android:textSize="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/label" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/label"
        android:layout_marginTop="100dp"
        android:background="@drawable/course_bg"
        android:id="@+id/course1">


        <ProgressBar
            android:id="@+id/progressBarCourse1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/courseImage1"
            android:progressDrawable="@drawable/pb_course">
        </ProgressBar>


        <ImageView
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/courseImage1"
            android:src="@drawable/people_doing_stuff"
            android:layout_alignParentLeft="true"
            android:background="@drawable/course_img_bg"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/rubik_medium"
            android:text="תכנות למתחילים"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:textColor="#A1A1A1"
            android:id="@+id/courseName1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/rubik_light"
            android:text="שיעור נוכחי: משתנים ולולאות"
            android:textSize="13dp"
            android:layout_below="@id/courseName1"
            android:layout_marginRight="10dp"/>

        <View
            android:id="@+id/clickView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_anim2"
            android:clickable="true" />

    </RelativeLayout>

</RelativeLayout>