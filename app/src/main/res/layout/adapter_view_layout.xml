<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:gravity="top"
        android:fontFamily="@font/rubik_medium"
        android:textSize="18dp"
        android:text="חנות אינטרנטית"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/projectName"
        android:textColor="#5A5A6E"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectName"
        android:orientation="horizontal"
        android:layoutDirection="rtl">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/htmlIcon"
            android:src="@drawable/ic_html_5"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_css_3"
            android:id="@+id/cssIcon"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/htmlIcon"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_javascript"
            android:id="@+id/jsIcon"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/cssIcon"/>



    </RelativeLayout>



</RelativeLayout>
