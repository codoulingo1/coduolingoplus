<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#F3F4F9"
    >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ללמוד תכנות"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/rubik_bold"
        android:textColor="#42445F"
        android:textSize="44dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ב5 דקות ביום."
        android:layout_alignParentRight="true"
        android:fontFamily="@font/rubik_bold"
        android:textColor="#42445F"
        android:textSize="54dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="46dp"
        app:srcCompat="@drawable/ic_people_doing_stuff" />

    <ImageButton
        android:id="@+id/imageButtonGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@null"
        android:maxWidth="400dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/google_google"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הרשמה עם אימייל"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textSize="28dp"
        android:fontFamily="@font/rubik_light"
        android:textColor="#42445F"/>
</RelativeLayout>