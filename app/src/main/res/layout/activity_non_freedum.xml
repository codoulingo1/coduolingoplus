<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.getcodly.codly.NonFreedum">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="404dp"
        android:layout_height="78dp"
        android:fontFamily="@font/rubik_light"
        android:text="שאלה"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_below="@id/progressBar"
        android:layout_marginTop="5dp"/>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="b1"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="b2"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="b3"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="b4"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="b5"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="b6 "
                android:textAllCaps="false"
                android:textSize="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.943" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="418dp"
        android:layout_height="313dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/veramono"
        android:textSize="16dp"
        android:background="@color/codeBackground"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/dlt"
        android:layout_width="76dp"
        android:layout_height="42dp"
        android:text="מחק"
        android:layout_above="@id/dltall"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/dltall"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:text="מחק הכל"
        android:layout_above="@id/horizontalScrollView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#80FFFFFF"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/next3"
        android:layout_above="@id/horizontalScrollView"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="347dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        android:progressDrawable="@drawable/pb_lsn"
        />
    <RelativeLayout
        android:id="@+id/popupFalse"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ffc1c2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/continueBtnFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:adjustViewBounds="true"
            android:background="#ffc1c2"
            android:maxWidth="75dp"
            android:maxHeight="75dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/next2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@fonts/rubik_bold"
            android:text="טעות"
            android:textColor="#de302b"
            android:textSize="46sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/PopupTrue"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#b8f28b"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/continueBtnTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:adjustViewBounds="true"
            android:background="#80b8f28b"
            android:maxWidth="75dp"
            android:maxHeight="75dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/next" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@fonts/rubik_bold"
            android:text="כל הכבוד!"
            android:textColor="#7bb92d"
            android:textSize="46sp" />

    </RelativeLayout>

</RelativeLayout>