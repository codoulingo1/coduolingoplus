<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/appIconIV"
        android:src="@drawable/projects_placeholder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/aNametxt"
        android:text="שם משתמש"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/appIconIV"
        android:layout_marginRight="12dp" />

    <TextView
        android:id="@+id/aVersiontxt"
        android:text="רמה 5 | 3400 XP"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aNametxt"
        android:layout_alignRight="@+id/aNametxt"
        android:layout_alignStart="@+id/aNametxt" />



</RelativeLayout>