<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsFragment">

    <ListView
        android:id="@+id/friendList2"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout2"/>

    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#42445F"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/rubik_medium"
            android:text="הליגה השבועית"
            android:textColor="#FEFEFE"
            android:textSize="24dp" />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="#60627D"
        android:layout_below="@id/relativeLayout">

        <TextView
            android:id="@+id/ligaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:divider="#f00"
            android:dividerHeight="1dp"
            android:fontFamily="@font/rubik_medium"
            android:text="אתה בליגה"
            android:textColor="#FEFEFE"
            android:textSize="22dp" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:timeTextColor="#FCBA60"
            app:timeTextSize="22sp"
            app:isTimeTextBold="true"
            app:suffixGravity="bottom"
            app:suffixTextColor="#FCBA60"
            app:suffixTextSize="12sp"
            app:suffixDay="d"
            app:suffixHour="h"
            app:suffixMinute="m"
            app:suffixSecond="s"
            android:layout_below="@id/leagueImg"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/leagueImg"
            android:layout_width="400dp"
            android:layout_height="105dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:src="@drawable/ic_league1"/>
    </RelativeLayout>

</RelativeLayout>