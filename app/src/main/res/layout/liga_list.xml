<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/appIconIV"
        android:src="@drawable/projects_placeholder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/aNametxt"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/appIconIV"
        android:maxLines="1"
        android:text="שם משתמש"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/num"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/aNametxt"
        android:maxLines="1"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/aVersiontxt"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/aNametxt"
        android:layout_alignStart="@+id/aNametxt"
        android:layout_below="@+id/aNametxt"
        android:layout_marginStart="0dp"
        android:maxLines="1"
        android:text=" 3400 XP"
        android:textColor="#221A1A"
        android:textSize="14sp" />



</RelativeLayout>